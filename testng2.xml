<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MyTestSuite">

    <!-- Define a test in the suite -->
    <test name="TestMethodsInDemo1AndDemo2">

        <!-- Define a group of classes -->
        <classes>
            <!-- First class with two methods -->
            <class name="Test.Demo1">
                <methods>
                    <include name="LoanStatements"/>
